{% extends 'admin/base.html.twig' %}
{% import "macros/dataTable.html.twig" as dataTable %}
{% import "macros/breadcrumb.html.twig" as breadcrumb %}
{% import "macros/alertes.html.twig" as alertes %}
{% block breadcrumb %}
{{ breadcrumb.breadcrumb('Abonnements',)}}
{% endblock %}

{% block head %}
{{ dataTable.css()}}
{% endblock %}

{% block foot %}
{{ dataTable.js()}}
{% endblock %}

{% block javascripts %}
{{ dataTable.script('#table-1')}}
{% endblock %}

{% block title %}Abonnement{% endblock %}

{% block body %}
{% for item in app.flashes('success') %}
    {{ alertes.alert(item,'success')}}
{% endfor %}
<div class="card">
    <div class="card-body">
                <div class="btn-group mb-3">
            <a href="#" class="btn btn-primary">Create New Abonnement client</a>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-primary card-tabs">
                    <div class="card-header p-0 pt-1">
                        <ul class="nav nav-tabs" id="custom-tabs-one-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="custom-tabs-one-home-tab" data-toggle="pill"
                                    href="#custom-tabs-one-home" role="tab" aria-controls="custom-tabs-one-home"
                                    aria-selected="false">En cour <span title="{{ en_cour|length }} abonnements" class="badge bg-success">{{ en_cour|length }}</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="custom-tabs-one-messages-tab" data-toggle="pill"
                                    href="#custom-tabs-one-messages" role="tab" aria-controls="custom-tabs-one-messages"
                                    aria-selected="false">Annuller 
                                    <span class="badge badge-danger">{{ annuler|length }}</span> </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="custom-tabs-one-profile-tab" data-toggle="pill"
                                    href="#custom-tabs-one-profile" role="tab" aria-controls="custom-tabs-one-profile"
                                    aria-selected="false">Termine
                                    <span class="badge badge-dark">{{ terminer|length }}</span>
                                    </a>
                            </li>
                            {# <li class="nav-item">
                                <a class="nav-link" id="custom-tabs-one-settings-tab" data-toggle="pill"
                                    href="#custom-tabs-one-settings" role="tab" aria-controls="custom-tabs-one-settings"
                                    aria-selected="true">Settings</a>
                            </li> #}
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content" id="custom-tabs-one-tabContent">
                            <div class="tab-pane fade active show" id="custom-tabs-one-home" role="tabpanel"
                                aria-labelledby="custom-tabs-one-home-tab">
                                {{ include ("admin/abonnement/_table.html.twig",{items:en_cour}) }}

                            </div>
                            <div class="tab-pane fade" id="custom-tabs-one-profile" role="tabpanel"
                                aria-labelledby="custom-tabs-one-profile-tab">
                                <!-- terminer -->
                                {{ include ("admin/abonnement/_table.html.twig",{items:terminer}) }}
                            </div>
                            <div class="tab-pane fade" id="custom-tabs-one-messages" role="tabpanel"
                                aria-labelledby="custom-tabs-one-messages-tab">
                                <!-- annuler -->
                                {{ include ("admin/abonnement/_table.html.twig",{items:annuler}) }}

                            </div>
                            <div class="tab-pane fade " id="custom-tabs-one-settings" role="tabpanel"
                                aria-labelledby="custom-tabs-one-settings-tab">
