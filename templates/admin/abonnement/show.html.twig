        </div>
        <!-- /.invoice -->
    </div><!-- /.col -->
</div>
<div class="card card-outline card-blue">
    <div class="card-header">
        <h3>Abonnement</h3>
    </div>
    <div class="card-body">

        <table class="table">
            <tbody>
                <tr>
                    <th>Numero</th>
                    <td>{{ abonnement.number }}</td>
                </tr>
                <tr>
                    <th>Date de debut</th>
                    <td>{{ abonnement.createdAt ? abonnement.createdAt|date_format_fr : '' }}</td>
                </tr>
                <tr>
                    <th>Date de fin</th>
                    <td>{{ abonnement.endAt ? abonnement.endAt|date_format_fr : '' }}</td>
                </tr>
                <tr>
                    <th>Etat</th>
                    <td>{{ abonnement.etat }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('admin_abonnement_index') }}">back to list</a>

        <a href="{{ path('admin_abonnement_edit', {'id': abonnement.id}) }}">edit</a>

        {{ include('admin/abonnement/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}