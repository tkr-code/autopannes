{% extends 'admin/base.html.twig' %}

{% block title %}Modele index{% endblock %}

{% block body %}
    <h1>Modele index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for modele in modeles %}
            <tr>
                <td>{{ modele.id }}</td>
                <td>{{ modele.name }}</td>
                <td>
                    <a href="{{ path('admin_modele_show', {'id': modele.id}) }}">show</a>
                    <a href="{{ path('admin_modele_edit', {'id': modele.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_modele_new') }}">Create new</a>
{% endblock %}
