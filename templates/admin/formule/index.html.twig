{% extends 'admin/base.html.twig' %}
{% import "macros/dataTable.html.twig" as dataTable %}
{% import "macros/links.html.twig" as links %}
{% block title %}Formule index{% endblock %}

{% block stylesheets %}
    {{ dataTable.css() }}
{% endblock %}
{% block foot %}
    {{ dataTable.js() }}
{% endblock %}

{% block javascripts %}
    {{ dataTable.script('#table-1') }}
{% endblock %}
{% block body %}
<div class="card card-outline card-primary">
    <div class="card-header">
        <h3>Formule index</h3>
    </div>
    <div class="card-body">
        <div class="btn-group mb-3">
            <a href="{{ path('admin_formule_new') }}" class="btn btn-primary">New Formule</a>
        </div>
    <table id="table-1" class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Is Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formule in formules %}
            <tr>
                <td>{{ formule.name }}</td>
                <td>{{ formule.amount }}</td>
                <td>{{ formule.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="btn-group">
                        {{ links.view(path('admin_formule_show', {'id': formule.id})) }}
                        {{ links.edit(path('admin_formule_edit', {'id': formule.id})) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
