{% extends 'admin/base.html.twig' %}

{% block title %}Formule index{% endblock %}

{% block body %}
    <h1>Formule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Is_active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formule in formules %}
            <tr>
                <td>{{ formule.id }}</td>
                <td>{{ formule.name }}</td>
                <td>{{ formule.amount }}</td>
                <td>{{ formule.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('admin_formule_show', {'id': formule.id}) }}">show</a>
                    <a href="{{ path('admin_formule_edit', {'id': formule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_formule_new') }}">Create new</a>
{% endblock %}
