{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Postal_code</th>
                <td>{{ client.postalCode }}</td>
            </tr>
            <tr>
                <th>Hbd_day</th>
                <td>{{ client.hbdDay ? client.hbdDay|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ client.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_client_index') }}">back to list</a>

    <a href="{{ path('admin_client_edit', {'id': client.id}) }}">edit</a>

    {{ include('admin_client/_delete_form.html.twig') }}
{% endblock %}
