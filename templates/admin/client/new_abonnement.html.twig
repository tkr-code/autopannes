{% extends 'admin/base.html.twig' %}

{% block title %}New Abonnement Client{% endblock %}

{% block body %}
<div class="card card-outline card-primary">
    <div class="card-header">
    </div>
    <div class="card-body">
        <h3>Create new Abonnemnt Client</h3>

        {{ form_start(form)}}
        <div class="row">
            <div class="col-lg-12">
                <h4 class=" text-center rounded p-2 bg-light">Coordonnées du client</h4>
                <div class="form-row">
                    <div class="form-group col-6">
                        {{ form_row(form.client) }}
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <h4 class=" text-center rounded p-2 bg-light">Votre véhicule</h4>
                <div class="form-row">
                    <div class="form-group col-4">
                        {{ form_row(form.vehicule.marque)}}
                    </div>
                    <div class="form-group col-4">
                        {{ form_row(form.vehicule.model_and_version)}}
                    </div>
                    <div class="form-group col-4">
                        {{ form_row(form.vehicule.serie)}}
                    </div>
                    <div class="form-group col-4">
                        {{ form_row(form.vehicule.immatriculation)}}
                    </div>
                    <div class="form-group col-4">
                        {{ form_row(form.vehicule.mise_en_circulation)}}
                    </div>
                    <div class="form-group col-4">
                        {{ form_row(form.vehicule.puissance)}}
                    </div>
                    <div class="form-group col-4">
                        {{ form_row(form.vehicule.kilometrage)}}
                    </div>
                    <div class="form-group col-4">
                        {{ form_row(form.vehicule.utilisation)}}
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <h4 class=" text-center rounded p-2 bg-light">Vos besoins</h4>
                <p>Vous envisagez d'adherer a l'aussurancee= en fonction de vos besoins et du type de votre vehicule</p>
                <div class="form-row">
                    <div class="form-group col-6">
                        {{form_row(form.vehicule.formule)}}
                    </div>
                    <div class="form-group col-6">
                        {{form_row(form.payment)}}
                    </div>
                </div>
            </div>
        </div>
        {{ form_widget(form)}}
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form)}}

        <a href="{{ path('admin_client_index') }}" class="btn btn-dark">back to list</a>
    </div>
</div>
{% endblock %}