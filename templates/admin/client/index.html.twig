{% import "macros/dataTable.html.twig" as dataTable %}
{% extends 'admin/base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block head %}
    {{ dataTable.css() }}
{% endblock %}

{% block foot %}
    {{ dataTable.js() }}
{% endblock %}

{% block javascripts %}
    {{ dataTable.script('#table-1') }}
{% endblock %}
{% block body %}
<div class="card">
    <div class="card-header">
        <h3>Clients </h3>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-12 col-md-12">
                <div class="btn-group">
                        <a class="btn btn-primary" href="{{ path('admin_client_new') }}">Create new</a>
                </div>
            </div>
        </div>
        <table id="table-1" class="table">
            <thead>
                <tr>
                    <th>Num√©ro</th>
                    <th>Client</th>
                    <th>Email</th>
                    <th>Abonnement</th>
                    <th>Phone number</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                <tr>
                    <td>{{ client.number }}</td>
                    <td>
                    <a href="{{ path('admin_client_gestion',{id:client.id }) }}">
                        {{ client.personne.fullName }}</td>
                    </a>
                    <td>{{ client.email }}</td>
                    <td>{{ client.abonnements|length }}</td>
                    <td>{{ client.phoneNumber }}</td>
                    <td>
                        <a href="{{ path('admin_client_show', {'id': client.id}) }}">show</a>
                        <a href="{{ path('admin_client_edit', {'id': client.id}) }}">edit</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}